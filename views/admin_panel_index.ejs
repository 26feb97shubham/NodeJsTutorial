                                <a href="#" style="text-decoration: none"><i class="fa-solid fa-table"></i><span style="padding-left:10px">Tables</span></a>
                            </li>
                            <li class="list-group-item" style="background-color: transparent; margin-top: 30px;"> 
                                <a href="#" style="text-decoration: none"><i class="fa-brands fa-wpforms"></i><span style="padding-left:10px">Forms</span></a>
                            </li>
                            <li class="list-group-item" style="background-color: transparent; margin-top: 30px;"> 
                                <a href="#" style="text-decoration: none"><i class="fa-solid fa-circle-info"></i><span style="padding-left:10px">About</span></a>
                            </li>
                            <li class="list-group-item" style="background-color: transparent; margin-top: 30px;"> 
                                <a href="#" style="text-decoration: none"><i class="fa-solid fa-sliders"></i><span style="padding-left:10px">Settings</span></a>
                            </li>
                            <li class="list-group-item" id="logout"  style="background-color: transparent; margin-top: 30px;"> 
                              <a href="" style="text-decoration: none"><i class="fa-solid fa-sliders"></i><span style="padding-left:10px">Logout</span></a>
                          </li>
                        </ul>
                    </div>
                    <div class="col-sm-9">
                        <div class="row" style="margin-top: 30px; margin-left: 30px;">
                            <div class="col-sm-4">
                                <div class="card" style="background-color: #22242a73;">
                                  <div class="card-body text-center">
                                    <h5 class="card-title">Users Management</h5>
                                  </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="card" style="background-color: #22242a73;">
                                  <div class="card-body text-center">
                                    <h5 class="card-title">Users Management</h5>
                                  </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="card" style="background-color: #22242a73;">
                                  <div class="card-body text-center">
                                    <h5 class="card-title">Users Management</h5>
                                  </div>
                                </div>
                            </div>
                        </div>

                        <!-- Table -->

                        

                        <table class="table table-bordered table-hover" style="margin-top: 30px; margin-left: 30px;" id="usersTable">
                          <thead>
                            <tr>
                              <th scope="col">#</th>
                              <th scope="col">UserName</th>
                              <th scope="col">Full Name</th>
                              <th scope="col">Email</th>
                              <th scope="col">Phone</th>
                              <th scope="col">Status</th>
                              <th scope="col">Action</th>
                            </tr>
                          </thead>

                          <!--Table-Body-->
                          <tbody>
                            <% for(var i=0; i < users.length; i++) { %>
                              <tr>
                                  <td><%= i+1 %></td> 
                                  <td><%= users[i].username %></td>
                                  <td><%= users[i].firstname %> <%= users[i].lastname %></td>
                                  <td><%= users[i].email %></td>
                                  <td><%= users[i].mobileNumber %></td>
                                  <td>
                                    <button type="button" class="btn btn-success">Active</button>
                                  </td>
                                  <td>
                                    <button type="button" class="btn btn-primary">View</button>
                                  </td>
                              </tr>
                          <% } %>
                          </tbody>
                        </table>
                        
                        <div class="d-flex flex-row justify-content-end mt-auto">
                          <button id="previousButton" type="button" class="btn btn-light">Previous</button>
                          <button id="nextButton" type="button" class="btn btn-light" style="margin-left: 15px;">Next</button> 
                          </div> 
                        

        
                    </div>
            </div>
        </div>
    </div>
</body>
